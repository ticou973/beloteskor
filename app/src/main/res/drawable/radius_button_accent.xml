<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="@color/color_accent2" />
            <gradient android:angle="-90" android:startColor="@color/color_accent2" android:endColor="@color/color_accent2"  />
        </shape>
    </item>

    <item android:state_checked="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="@color/colorbuttonfalse" />
            <gradient android:angle="-90" android:startColor="@color/colorbuttonfalse" android:endColor="@color/colorbuttonfalse"  />
        </shape>
    </item>

    <item android:state_selected="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="@color/color_accent2" />
            <gradient android:angle="-90" android:startColor="@color/color_accent2" android:endColor="@color/color_accent2"  />
        </shape>
    </item>

    <item android:state_selected="false" >
        <shape android:shape="rectangle"  >
            <corners android:radius="2dip" />
            <stroke android:width="1dip" android:color="@color/colorbuttonfalse" />
            <gradient android:angle="-90" android:startColor="@color/colorbuttonfalse" android:endColor="@color/colorbuttonfalse"  />
        </shape>
    </item>

</selector>