<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_numero_partie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:text="Partie N°25"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_statut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto"
                android:text="Statut : terminée"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_numero_partie" />

            <TextView
                android:id="@+id/tv_equipeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:fontFamily="@font/roboto"
                android:text="Robert - Dorothée :"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_numero_partie"
                app:layout_constraintStart_toEndOf="@+id/tv_numero_partie" />

            <TextView
                android:id="@+id/tv_score_equipeA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/roboto"
                android:text="345"
                android:textStyle="bold|italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_equipeA"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_equipeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:fontFamily="@font/roboto"
                android:text="Lucie - Raymond :"
                android:textStyle="italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_statut"
                app:layout_constraintStart_toEndOf="@+id/tv_numero_partie" />

            <TextView
                android:id="@+id/tv_score_equipeB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:fontFamily="@font/roboto"
                android:text="1024"
                android:textStyle="bold|italic"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_equipeB"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_date_partie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto"
                android:text="Date : 28.11.2018"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_statut" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>